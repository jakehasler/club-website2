
section.hero
	background primaryColor
	background linear-gradient(180deg, primaryColor, secondaryColor)
	height 100%
	width 100%
	color white
	font-size 22px
	position relative

	header
		position absolute
		top 20px
		left 1.5%
		width 97%
		transition top .2s ease, left .2s ease, width .2s ease
		h1
			font-size 26px
			transition font-size .2s ease
		@media screen and (max-width: 1800px)
			top 18px
			left 2%
			width 96%
			h1
				font-size 24px
		@media screen and (max-width: 600px)
			top 14px
			width 95%
			left 2.5%
			h1
				font-size 20px
			// text-transform uppercase
		nav
			// background lime
			position absolute
			top 0
			right 0
			@media screen and (max-width: 600px)
				top -2px
			a
				margin 0 0 0 30px
				color white
				text-decoration none
				&:hover
					text-decoration underline
				@media screen and (max-width: 600px)
					font-size 16px
					margin 0 0 0 10px

	img.logo
		position absolute
		top 50%
		left 50%
		max-height 60%
		max-width 50%
		transform translate(-50%, -55%)
		user-select none
		pointer-events none
		transition height .3s ease
		
	img.arrow
		position absolute
		bottom 5%
		left 50%
		height 30px
		transform translateX(-50%)
		transition height .3s ease
		animation pulse 1.75s infinite
		@media screen and (max-height: 800px)
			height 20px
		@keyframes pulse
			0%
				opacity 1
			50%
				opacity .25
			100%
				opacity 1

div.join
	position fixed
	top 15%
	left -15px
	cursor pointer
	transition left .2s ease, top .3s ease
	&:hover
		left 0
	@media screen and (max-height: 400px)
		top 25%

section.sponsors
	background-color rgb(240,240,240)
	padding 0 0 5px
	// border-top 2px solid rgb(230,230,230)
	h2
		font-size 28px
		padding 8px 0
		color rgb(50,50,50)
		margin 0 auto 20px
		text-align center
		background-color rgb(215,215,215)
		border-bottom 1px solid rgb(200,200,200)
		border-top 1px solid rgb(205,205,205)
	.img-cont
		width 90%
		margin 0 auto
		max-width 1200px
		div
			margin 15px auto
			text-align center
			img
				max-height 60px
				max-width 200px
				@media screen and (max-width: 800px)
					max-height 50px
					max-width 180px
			
		
