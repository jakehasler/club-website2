div#events-table-cont
		div.table-cont
			div.delete-event
				background-color darken(red, 15%)
				height 50px
				width 50px
				position absolute
				top 50%
				transform translateY(-50%) scale(1)
				border-radius 50%
				right -25px
				color white
				line-height 50px
				font-size 25px
				vertical-align center
				padding 0
				border none
				text-align center
				cursor pointer
				font-family 'helvetica neue', helvetica, sans-serif
				text-transform lowercase
				transition transform .3s ease
				user-select auto
				z-index 10
				&:hover
					background-color darken(red, 5%)
					transform translateY(-50%) scale(1.3)

form#new-event-form
	display block
	padding 15px
	margin 20px auto
	width 80%
	max-width 500px
	border-radius 2px
	background-color darken(secondaryColor, 10%)
	h2
		font-size 26px
		padding 5px 0 15px
		font-weight 400
		color white
	input.input-field
		background-color darken(secondaryColor, 20%)
		outline none
		border none
		color white
		outline-offset 0
		border 1px solid darken(secondaryColor, 25%)
		display block
		width 100%
		max-width 490px
		height 25px
		line-height 25px
		font-size 20px
		text-indent 1px
		padding 5px
		border-radius 1px
		margin 0 0 20px 0
		&:focus
			border 1px solid lighten(secondaryColor, 40%)
		&:placeholder
			color rgb(230,230,230)
		&::input-placeholder
			color rgb(230,230,230)
		&::-webkit-input-placeholder
			color rgb(230,230,230)
		&::-moz-placeholder
			color rgb(230,230,230)
		&.error
			background-color alpha(red, .4)
			
	button
		outline none
		border none
		background-color grayColor
		color white
		border-radius 1px
		font-size 18px
		margin-top 10px
		padding 5px 10px
		float right
		cursor pointer
		&:hover
			background-color darken(grayColor, 10%)
		